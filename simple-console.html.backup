    <script>
        // ç¾åœ¨ã®ãƒ›ã‚¹ãƒˆã«åŸºã¥ã„ã¦API URLã‚’è‡ªå‹•æ¤œå‡º
        const API_BASE = window.location.hostname === 'localhost' 
            ? 'http://localhost:5001'
            : window.location.hostname.match(/^\d+\.\d+\.\d+\.\d+$/)
                ? `http://${window.location.hostname}:5001`
                : window.location.origin.replace('-8000.', '-5001.');
        let tasks = [];
        let selectedTask = null;

        // åˆæœŸåŒ–
        async function init() {
            await loadTasks();
            setInterval(loadTasks, 3000); // 3ç§’ã”ã¨ã«æ›´æ–°ï¼ˆã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹ãƒªãƒ•ãƒ¬ãƒƒã‚·ãƒ¥é«˜é€ŸåŒ–ï¼‰
        }

        // ã‚¿ã‚¹ã‚¯ä¸€è¦§ã‚’å–å¾—
        async function loadTasks() {
            try {
                const response = await fetch(`${API_BASE}/api/simple/tasks`);
                tasks = await response.json();
                updateStats();
                renderTaskList();
                
                // é¸æŠä¸­ã®ã‚¿ã‚¹ã‚¯ã‚’å†ãƒ¬ãƒ³ãƒ€ãƒªãƒ³ã‚°
                if (selectedTask) {
                    const updated = tasks.find(t => t.id === selectedTask.id);
                    if (updated) {
                        selectedTask = updated;
                        renderTaskDetail(selectedTask);
                    }
                }
            } catch (error) {
                console.error('Failed to load tasks:', error);
            }
        }

        // æ‰‹å‹•ãƒªãƒ•ãƒ¬ãƒƒã‚·ãƒ¥
        async function manualRefresh() {
            const btn = document.querySelector('.refresh-btn');
            const icon = document.getElementById('refresh-icon');
            const text = document.getElementById('refresh-text');
            
            // ãƒªãƒ•ãƒ¬ãƒƒã‚·ãƒ¥ä¸­ã®è¡¨ç¤º
            btn.classList.add('refreshing');
            btn.disabled = true;
            icon.textContent = 'â³';
            text.textContent = 'æ›´æ–°ä¸­...';
            
            await loadTasks();
            
            // å®Œäº†è¡¨ç¤º
            icon.textContent = 'âœ“';
            text.textContent = 'å®Œäº†';
            
            setTimeout(() => {
                btn.classList.remove('refreshing');
                btn.disabled = false;
                icon.textContent = 'ğŸ”„';
                text.textContent = 'æ›´æ–°';
            }, 1000);
        }

        // å…¨ã‚¿ã‚¹ã‚¯ã‚’ãƒªã‚»ãƒƒãƒˆ
        async function resetAllTasks() {
            if (!confirm('å…¨ã¦ã®ã‚¿ã‚¹ã‚¯ã‚’æœªå‡¦ç†çŠ¶æ…‹ã«ãƒªã‚»ãƒƒãƒˆã—ã¾ã™ã‹ï¼Ÿ\n\nå‡¦ç†ä¸­ãƒ»å®Œäº†ãƒ»å¤±æ•—ã®ã‚¿ã‚¹ã‚¯ãŒå…¨ã¦æœªå‡¦ç†ã«æˆ»ã‚Šã¾ã™ã€‚')) {
                return;
            }

            try {
                const response = await fetch(`${API_BASE}/api/simple/tasks/reset`, {
                    method: 'POST'
                });

                const result = await response.json();

                if (response.ok && result.success) {
                    alert(`âœ… ${result.reset_count}ä»¶ã®ã‚¿ã‚¹ã‚¯ã‚’ãƒªã‚»ãƒƒãƒˆã—ã¾ã—ãŸ`);
                    await loadTasks();
                } else {
                    alert(`âŒ ãƒªã‚»ãƒƒãƒˆå¤±æ•—: ${result.error || 'ä¸æ˜ãªã‚¨ãƒ©ãƒ¼'}`);
                }
            } catch (error) {
                console.error('Reset failed:', error);
                alert('âŒ ãƒªã‚»ãƒƒãƒˆã«å¤±æ•—ã—ã¾ã—ãŸ');
            }
        }

        // çµ±è¨ˆæƒ…å ±ã‚’æ›´æ–°
        function updateStats() {
            document.getElementById('stat-total').textContent = tasks.length;
            document.getElementById('stat-pending').textContent = tasks.filter(t => t.status === 'pending').length;
            document.getElementById('stat-completed').textContent = tasks.filter(t => t.status === 'completed').length;
            document.getElementById('stat-failed').textContent = tasks.filter(t => t.status === 'failed').length;
        }

        // ã‚¿ã‚¹ã‚¯ãƒªã‚¹ãƒˆã‚’æç”»
        function renderTaskList() {
            const container = document.getElementById('task-list');
            
            if (tasks.length === 0) {
                container.innerHTML = '<div class="empty-state">ã‚¿ã‚¹ã‚¯ãŒã‚ã‚Šã¾ã›ã‚“</div>';
                return;
            }

            container.innerHTML = tasks.map(task => `
                <div class="task-item ${selectedTask && selectedTask.id === task.id ? 'selected' : ''}" 
                     onclick="selectTask(${task.id})">
                    <div class="task-header">
                        <div class="task-title">${task.company.name}</div>
                        <span class="status-badge status-${task.status}">${getStatusText(task.status)}</span>
                    </div>
                    <div class="task-details">
                        <strong>${task.product.name}</strong><br>
                        <small>ID: ${task.id} | ä½œæˆ: ${formatDate(task.created_at)}</small>
                    </div>
                </div>
            `).join('');
        }

        // ã‚¿ã‚¹ã‚¯ã‚’é¸æŠ
        function selectTask(taskId) {
            selectedTask = tasks.find(t => t.id === taskId);
            renderTaskList();
            renderTaskDetail(selectedTask);
        }

        // ã‚¿ã‚¹ã‚¯è©³ç´°ã‚’æç”»
        function renderTaskDetail(task) {
            const container = document.getElementById('task-detail');
            
            if (!task) {
                container.innerHTML = '<div class="empty-state">ã‚¿ã‚¹ã‚¯ã‚’é¸æŠã—ã¦ãã ã•ã„</div>';
                return;
            }

            const canExecute = task.status === 'pending' || task.status === 'failed';
            const isCompleted = task.status === 'completed';
            const canComplete = (task.status === 'in_progress' && task.screenshot_path) || isCompleted;

            container.innerHTML = `
                <!-- ä¼æ¥­æƒ…å ± -->
                <div class="info-section">
                    <h4>ğŸ¢ å¯¾è±¡ä¼æ¥­</h4>
                    <div class="content">
                        <strong>${task.company.name}</strong><br>
                        æ¥­ç¨®: ${task.company.industry || 'N/A'}<br>
                        <a href="${task.company.form_url}" target="_blank" class="link">ãƒ•ã‚©ãƒ¼ãƒ URL</a>
                    </div>
                </div>

                <!-- å•†ææƒ…å ± -->
                <div class="info-section">
                    <h4>ğŸ“¦ å•†æ</h4>
                    <div class="content">
                        <strong>${task.product.name}</strong><br>
                        ${task.product.description}
                    </div>
                </div>

                <!-- ãƒ•ã‚©ãƒ¼ãƒ ãƒ‡ãƒ¼ã‚¿ -->
                <div class="info-section">
                    <h4>ğŸ“ è‡ªå‹•å…¥åŠ›ãƒ‡ãƒ¼ã‚¿ï¼ˆå‚ç…§ç”¨ãƒ»æ‰‹å‹•å…¥åŠ›ä¸è¦ï¼‰</h4>
                    <div class="form-data">
                        ${Object.entries(task.form_data).map(([key, value]) => `
                            <div class="form-field" data-field-name="${key}">
                                <label>${key}</label>
                                <div class="field-value-display">${value}</div>
                                <button class="copy-btn vnc-auto-paste-btn">âš¡ è‡ªå‹•ãƒšãƒ¼ã‚¹ãƒˆ</button>
                            </div>
                        `).join('')}
                    </div>
                </div>

                <!-- ã‚¹ã‚¯ãƒªãƒ¼ãƒ³ã‚·ãƒ§ãƒƒãƒˆ -->
                ${task.screenshot_path ? `
                    <div class="info-section">
                        <h4>ğŸ“¸ ã‚¹ã‚¯ãƒªãƒ¼ãƒ³ã‚·ãƒ§ãƒƒãƒˆ</h4>
                        <div class="screenshot-area">
                            <img src="${API_BASE}${task.screenshot_path}" alt="Screenshot">
                        </div>
                    </div>
                ` : ''}

                <!-- ã‚¢ã‚¯ã‚·ãƒ§ãƒ³ãƒœã‚¿ãƒ³ -->
                <div class="action-buttons">
                    <button class="btn btn-primary" 
                            onclick="executeTask(${task.id})"
                            ${!canExecute ? 'disabled' : ''}>
                        ${task.status === 'in_progress' ? '<span class="loading"></span>' : ''}
                        ğŸ¤– è‡ªå‹•å…¥åŠ›å®Ÿè¡Œ
                    </button>
                    <button class="btn btn-success" 
                            onclick="${isCompleted ? '' : `completeTask(${task.id})`}"
                            ${!canComplete ? 'disabled' : ''}
                            style="${isCompleted ? 'cursor: default;' : ''}">
                        âœ… ${isCompleted ? 'é€ä¿¡å®Œäº†' : 'é€ä¿¡å®Œäº†'}
                    </button>
                    <button class="btn btn-secondary" 
                            onclick="window.open('${task.company.form_url}', '_blank')">
                        ğŸŒ ãƒ•ã‚©ãƒ¼ãƒ ã‚’é–‹ã
                    </button>
                </div>

                <!-- ã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹æƒ…å ± -->
                <div class="info-section" style="margin-top: 1.5rem;">
                    <h4>â„¹ï¸ ã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹</h4>
                    <div class="content">
