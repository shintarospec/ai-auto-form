# AI AutoForm - Environment Variables

# Flask Configuration
FLASK_APP=backend/app.py
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5001
SECRET_KEY=your-secret-key-here-change-in-production

# PostgreSQL Database Configuration
POSTGRES_DB=ai_autoform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database URL (auto-generated)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# pgAdmin Configuration
PGADMIN_EMAIL=admin@ai-autoform.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Google Gemini API (for future AI integration)
GEMINI_API_KEY=your-gemini-api-key-here

# JWT Authentication (for future use)
JWT_SECRET_KEY=your-jwt-secret-key-here

# CORS Configuration
CORS_ORIGINS=http://localhost:8000,http://localhost:5001,https://*.app.github.dev

# Playwright Configuration
PLAYWRIGHT_HEADLESS=False
PLAYWRIGHT_BROWSER=webkit

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
